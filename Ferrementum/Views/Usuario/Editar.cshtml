@model Ferrementum.Models.Usuario

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Editar usuario</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editar","Usuario")" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control" name="Documento" value="@Html.DisplayTextFor(m => m.Num_doc)"/>
                    </div>
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="Nombre" value="@Html.DisplayTextFor(m => m.Nombre)" />
                    </div>
                    <div class="form-group">
                        <label>Apellido</label>
                        <input type="text" class="form-control" name="Apellido" value="@Html.DisplayTextFor(m => m.Apellido)"/>
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="text" class="form-control" name="Contrasena" value="@Html.DisplayTextFor(m => m.Contrasena)"/>
                    </div>
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" class="form-control" name="Correo" value="@Html.DisplayTextFor(m => m.Correo)"/>
                    </div>
                    <div class="form-group">
                        <label>Ciudad</label>
                        <input type="text" class="form-control" name="Ciudad" value="@Html.DisplayTextFor(m => m.Ciudad)"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a class="btn btn-warning" href="@Url.Action("Inicio","Usuario")">Volver</a>
                </form>
            </div>
        </div>

    </div>
</div>