@model IEnumerable<Ferrementum.Models.Usuario>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                    <h4>Lista de Usuario</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Registrar","Usuario")">Crear Nuevo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Num Documento</th>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Contraseña</th>
                                <th>Correo</th>
                                <th>Ciudad</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Ferrementum.Models.Usuario item in Model) {
                            <tr>
                                <td>@item.Num_doc</td>
                                <td>@item.Nombre</td>
                                <td>@item.Apellido</td>
                                <td>@item.Contrasena</td>
                                <td>@item.Correo</td>
                                <td>@item.Ciudad</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Editar","Usuario", new {num_doc = item.Num_doc})">Editar</a>
                                    <a class="btn btn-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

